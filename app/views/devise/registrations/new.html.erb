<div class="container">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h1 class="form-signin-heading">Regístrate</h1>
          <% if !alert.nil?  || !alert.blank? %>
            <div class="alert alert-danger"><%= alert %></div>
            <%= devise_error_messages! %>
          <% end %>
        </div>
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html=>{:class =>"form-signin"}) do |f| %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-Mail" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> caraceteres mínimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" , class:"form-control", placeholder:"Escribe una nueva contraseña" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirma tu contraseña" %>
    
          <%= f.submit "Regístrate", class: "btn btn-lg btn-primary btn-block"%>
    
        <% end %>
      </div>
  </div>
</div> <!-- /container -->
<%= render "devise/shared/links" %>
