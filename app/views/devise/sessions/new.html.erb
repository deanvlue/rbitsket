<div class="panel panel-success">
  <div class="panel-heading"><h1>Ingresa a Bitsket</h1>
    <% if !alert.nil?  || !alert.blank? %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
  </div>
      <ul class="list-group">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <li class="list-group-item">
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder:"mcdinero@bitsket.com.mx" %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder:"Password" %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-lg btn-success"%>
            </div>
          <% end %>
          </li>
      </ul>
</div>





<%= render "devise/shared/links" %>
